{
	"compilerOptions": {
		"jsx": "react",
		"sourceMap": true,
		"target": "es5",
    "module": "commonjs",
		"types": [
			"node"
		],
		"typeRoots": [
			"./node_modules/@types"
		],
		"baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "allowJs": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.css",
		"typings/index.d.ts"
	]
}